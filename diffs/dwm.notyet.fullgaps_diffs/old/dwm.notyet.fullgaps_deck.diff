+					m->wy + my, mw - (2*c->bw), h - (2*c->bw), 0);
+			my += HEIGHT(c);
+		}
+		else
+			resize(c, m->rmaster ? m->wx : m->wx + mw, m->wy,
+					m->ww - mw - (2*c->bw), m->wh - (2*c->bw), 0);
